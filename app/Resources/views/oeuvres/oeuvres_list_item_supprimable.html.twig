{# template pour afficher une liste d'oeuvres #}
{% set oeuvre_link =  path('visualiserOeuvre', {'oeuvreId': oeuvre.id}) %}
<li class="list-group-item btn btn-light text-left">
    <div class="row">
        <div class="col-md-3 text-center pl-0">
            {% if oeuvre.photoPrincipale is not null %}
                <img src="{{ asset('uploads/photos/' ~ oeuvre.photoPrincipale.getCheminMiniatureServeur) }}" class="img-thumbnail center-block">
            {% else %}
                <img src="{{ asset('images/Point-dinterrogation.png') }}"  class="img-thumbnail .center-block">
            {% endif %}
        </div>
        <div class="col-md-6"
             onclick="window.location='{{ oeuvre_link }}'"
             style="cursor: pointer;">
            <h4 id="oeuvre_nom">{{oeuvre.nom}}</h4>
            <h6 id="oeuvre_categorie">{{ oeuvre.categorie.nom }}</h6>
            <h6 class="font-italic" id = "oeuvre_auteurs">Auteur(s) :
                {% if oeuvre.auteurs is not null %}
                    {{oeuvre.auteurs}}
                {% else %}
                    Aucun
                {% endif %}
            </h6>

        </div>
        <div class="col-md-3">
            <div class="mt-3">
                <button type="button"
                        style="z-index: 100"
                        class="btn-supprimer-oeuvre btn btn-info"
                        data-oeuvre-name="{{ oeuvre.nom }}"
                        data-oeuvre-del-link="{{ path('suppressionOeuvre', {'oeuvreId': oeuvre.id} ) }}">
                    Supprimer
                </button>
            </div>
        </div>
    </div>
</li>

