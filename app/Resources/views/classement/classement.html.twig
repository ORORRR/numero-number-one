{% extends 'pageSite.html.twig' %}
{% form_theme form 'form/errors.html.twig' %}

{% block main %}
    {{ form_start(form, {'attr': {'class': 'text-center border border-light p-5 m-5'} }) }}
    <p class="h3 mb-4"><strong>Classement des oeuvres</strong></p>

    {{ form_errors(form) }}
    {{ form_errors(form.nom) }}

    {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-4', 'placeholder': 'Nom'} }) }}
    {{ form_widget(form.periode, {'attr': {'class': 'form-control mb-4', 'placeholder': 'Periode'} }) }}
    <button id="afficher-classement" type="submit" class="btn btn-info btn-block my-4">Afficher le classement !</button>
    {{ form_end(form) }}
    <div class="container">
        {% if oeuvres is defined %}
            <h4>Résultats du classement :</h4>
            {% include 'oeuvres/oeuvres_list_classement.html.twig' with {'oeuvre_list_item_template': 'oeuvres/oeuvres_list_item.html.twig'} %}
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# ajouter ici les fichiers css custom à la page#}
{% endblock %}

